body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

header {
    background-color: #333;
    color: white;
    padding: 10px 0;
    text-align: center;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo img {
    width: 150px;
}

nav a {
    color: white;
    margin: 0 15px;
    text-decoration: none;
}

nav a:hover {
    text-decoration: underline;
}

#hero {
    background: url('https://media.istockphoto.com/id/640115920/photo/piper-methysticum-plant-agriculture-in-fiji.webp?b=1&s=170667a&w=0&k=20&c=dYt-jIU-jx7WwlWymIdae6dMqVX7C_myMqMMiHXKneg=') no-repeat center center/cover;
    color: white;
    text-align: center;
    padding: 100px 20px;
    position: relative;
}

.hero-content {
    max-width: 600px;
    margin: auto;
    background: rgba(0, 0, 0, 0.5);
    padding: 20px;
    border-radius: 10px;
    position: relative;
    z-index: 1;
}

.hero-content h2 {
    font-size: 2.5em;
}

.hero-content p {
    font-size: 1.2em;
}

.hero-content button {
    padding: 10px 20px;
    font-size: 1em;
    margin-top: 10px;
    cursor: pointer;
}

#overview {
    padding: 50px 20px;
    text-align: center;
    background-color: #fff;
}

#overview h2 {
    font-size: 2em;
    margin-bottom: 20px;
}

.benefits {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
}

.benefit {
    max-width: 30%;
    margin: 10px;
    text-align: center;
}

.benefit img {
    max-width: 100%;
    border-radius: 10px;
}

#products {
    padding: 50px 20px;
    background-color: #f9f9f9;
    text-align: center;
}

#products h2 {
    font-size: 2em;
    margin-bottom: 20px;
}

.product-slider {
    display: flex;
    justify-content: center;
    gap: 20px;
}

.product {
    max-width: 30%;
    text-align: center;
}

.product img {
    max-width: 100%;
    border-radius: 10px;
}

#contact {
    padding: 50px 20px;
    background-color: #fff;
    text-align: center;
}

.contact-container {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
}

form {
    max-width: 400px;
    margin: 10px;
}

form input, form textarea, form button {
    width: 100%;
    padding: 10px;
    margin-bottom: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
}

.contact-info {
    max-width: 400px;
    margin: 10px;
    text-align: left;
}

#map {
    width: 100%;
    height: 300px;
    margin-bottom: 10px;
}

.social-icons a {
    margin: 0 5px;
    color: #333;
    font-size: 1.5em;
}

.social-icons a:hover {
    color: #007bff;
}

#chatbot {
    position: fixed;
    bottom: 20px;
    right: 20px;
}

#chatbot-button {
    padding: 10px 20px;
    background-color: #007bff;
    color: white;
    border: none;
    border-radius: 50px;
    cursor: pointer;
}

#chatbot-window {
    display: none;
    background-color: white;
    border: 1px solid #ddd;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    width: 300px;
    height: 400px;
    position: fixed;
    bottom: 70px;
    right: 20px;
    border-radius: 10px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

#chatbot-messages {
    flex: 1;
    padding: 10px;
    overflow-y: auto;
}

#chatbot-input {
    padding: 10px;
    border: none;
    border-top: 1px solid #ddd;
    box-sizing: border-box;
}
