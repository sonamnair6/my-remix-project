body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f4f4f4;
}

header {
    background-color: #333;
    color: white;
    padding: 10px 0;
    text-align: center;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo img {
    width: 150px;
}

nav a {
    color: white;
    margin: 0 15px;
    text-decoration: none;
}

nav a:hover {
    text-decoration: underline;
}

main {
    padding: 50px 20px;
    background-color: #f9f9f9;
}

#product-detail {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    background: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.product-image {
    flex: 1;
    margin-right: 20px;
}

.product-image img {
    max-width: 100%;
    border-radius: 10px;
}

.product-thumbnails img {
    width: 50px;
    margin: 5px;
    cursor: pointer;
}

.product-info {
    flex: 2;
}

.product-info h2 {
    font-size: 2em;
    margin-bottom: 10px;
}

.product-info p {
    font-size: 1.2em;
    margin-bottom: 10px;
}

.quantity {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.quantity label {
    margin-right: 10px;
}

.quantity button {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
    margin: 0 5px;
}

.add-to-cart {
    background-color: #007bff;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 1em;
    cursor: pointer;
    border-radius: 5px;
    margin-bottom: 20px;
}

.tabs {
    margin-top: 20px;
}

.tablink {
    background-color: #333;
    color: white;
    padding: 10px;
    margin: 5px;
    cursor: pointer;
    border: none;
    display: inline-block;
}

.tabcontent {
    display: none;
    padding: 10px;
    border: 1px solid #ddd;
    margin-top: 10px;
}

#related-products {
    margin-top: 50px;
}

#related-products h2 {
    font-size: 2em;
    text-align: center;
    margin-bottom: 20px;
}

.related-product {
    display: inline-block;
    width: 200px;
    text-align: center;
    margin: 10px;
}

.related-product img {
    max-width: 100%;
    border-radius: 10px;
    margin-bottom: 10px;
}

footer {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 10px 0;
    margin-top: 20px;
}
/* Login Popup CSS */
.popup {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0,0,0,0.5);
}

.popup-content {
    background-color: white;
    margin: 15% auto;
    padding: 20px;
    border: 1px solid #888;
    width: 80%;
    max-width: 400px;
}

.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}
